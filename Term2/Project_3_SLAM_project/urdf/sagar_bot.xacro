<?xml version='1.0'?>

<robot name="sagar_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find slam_project)/urdf/sagar_bot.gazebo" />

  <material name="skyblue">
    <color rgba="0.13 0.44 0.70 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <material name="orange">
    <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
  </material>

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='base_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.38 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='base_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.38 0.1 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision name='left_wing_collision'>
      <origin xyz="0 0.075 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.28 0.05 0.1"/>
      </geometry>
    </collision>

    <visual name='left_wing_visual'>
      <origin xyz="0 0.075 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.28 0.05 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision name='right_wing_collision'>
      <origin xyz="0 -0.075 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.28 0.05 0.1"/>
      </geometry>
    </collision>

    <visual name='right_wing_visual'>
      <origin xyz="0 -0.075 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.28 0.05 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision name='front_left_fender_collision'>
      <origin xyz="0.14 0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='front_left_fender_visual'>
      <origin xyz="0.14 0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </visual>

    <collision name='front_right_fender_collision'>
      <origin xyz="0.14 -0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='front_right_fender_visual'>
      <origin xyz="0.14 -0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </visual>

    <collision name='rear_right_fender_collision'>
      <origin xyz="-0.14 -0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='rear_right_fender_visual'>
      <origin xyz="-0.14 -0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </visual>
 
    <collision name='rear_left_fender_collision'>
      <origin xyz="-0.14 0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>

    <visual name='rear_left_fender_visual'>
      <origin xyz="-0.14 0.05 0" rpy="0 0 1.5707"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </visual>
  
    <collision name='front_caster_collision'>
      <origin xyz="0.14 0 -0.042" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.042"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.14 0 -0.042" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.042"/>
      </geometry>
    </visual>

    <collision name='back_caster_collision'>
      <origin xyz="-0.14 0 -0.042" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.042"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.14 0 -0.042" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.042"/>
      </geometry>
    </visual>
  </link>

  <!-- front wheels -->
  <link name='front_left_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='front_left_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.056" radius="0.084"/>
      </geometry>
    </collision>

    <visual name='front_left_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <material name="orange"/>
      <geometry>
        <cylinder length="0.056" radius="0.084"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="front_left_wheel_hinge">
    <origin xyz="0 0.15 0" rpy="0 0 0"/>
    <child link="front_left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name='front_right_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='front_right_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.056" radius="0.084"/>
      </geometry>
    </collision>

    <visual name='front_right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <material name="orange"/>
      <geometry>
        <cylinder length="0.056" radius="0.084"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="front_right_wheel_hinge">
    <origin xyz="0 -0.15 0" rpy="0 0 0"/>
    <child link="front_right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <!-- Kinect RGB camera frame -->
  <!-- Camera link contains visualization information -->
  <link name="camera_rgb_frame">
    <pose>0 0 0.1 0 0 0</pose>
    <inertial>
      <mass value="0.564"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.003881243" ixy="0" ixz="0"
          iyy="0.000498940" iyz="0"
          izz="0.003879257"
      />
    </inertial>

    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.07271 0.27794 0.073"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://slam_project/meshes/kinect.dae"/>
      </geometry>
    </visual>
  </link>
  <joint name="camera_rgb_joint" type="fixed">
    <origin xyz="0.21 0  0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="camera_rgb_frame"/>
  </joint>

  <!-- Kinect RGB camera optical frame -->
  <link name="camera_rgb_optical_frame"/>
  <joint name="camera_rgb_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.571 0 -1.571"/>
    <parent link="camera_rgb_frame"/>
    <child link="camera_rgb_optical_frame"/>
  </joint>

  <!-- Kinect depth camera frame -->
  <link name="camera_depth_frame"/>
  <joint name="camera_depth_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="camera_rgb_frame"/>
    <child link="camera_depth_frame"/>
  </joint>

  <!-- Kinect depth camera optical frame -->
  <link name="camera_depth_optical_frame"/>
  <joint name="camera_depth_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.571 0 -1.571"/>
    <parent link="camera_depth_frame"/>
    <child link="camera_depth_optical_frame"/>
  </joint>

  <!-- laser range finder -->
  <link name='hokuyo'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".1 .1 .1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://slam_project/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.14 0.0 0.084" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
</robot>

